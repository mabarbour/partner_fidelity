library(tidyverse)
# 2 of 7 food-web configurations contain both BRBR and LYER
# 2 x 8 reps = 16 cages where we need to randomize
# BRBR and LYER among the different pots.
# create 8 aphids to sample from
BRBR_LYER <- c(rep("BRBR", 4), rep("LYER", 4))
# for loop to create 16 unique aphid randomizations
set.seed(34)
aphid_list <- list()
for(i in 1:16){
aphid_list[[i]] <- sample(BRBR_LYER, size = 8, replace = FALSE)
}
# make data frame
aphid_randomization <- data.frame(
randomization_ID = rep(1:16, each = 8),
Pot_position = rep(1:16, length.out = 8*16),
aphid_sp = unlist(aphid_list)
)
aphid_randomization
# make data frame
aphid_randomization <- data.frame(
randomization_ID = rep(1:16, each = 8),
Pot_position = rep(1:8, length.out = 8*16),
aphid_sp = unlist(aphid_list)
)
aphid_randomization
write_csv(x = aphid_randomization, "datasheets/aphid_randomization.csv")
